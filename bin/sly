#!/usr/bin/env node
const fs = require('fs');
const minimist = require('minimist');
const sly = require('../lib');

main();

function main() {
  const argv = minimist(process.argv.slice(2));

  if(!argv.input) {
    return console.error('Missing --input');
  }

  if(!argv.output) {
    return console.error('Missing --output');
  }

  const input = fs.readFileSync(argv.input, {
    encoding: 'utf-8'
  });

  fs.writeFile(argv.output, sly(input), function(err) {
    if(err) {
      return console.error(err);
    }
    console.log('\x1b[36m', '======= SLY =======' ,'\x1b[0m')
    console.log('\x1b[35m',argv.output, '\x1b[32m', 'Written successfully! âœ“', '\x1b[0m' );
  })
}